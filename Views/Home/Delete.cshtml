@model CollectedData
@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this data from the Database?</h2>

<div class="card mt-4 p-4" style="background-color: #fff">
    <form method="post">
        <input asp-for="Id" hidden />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Place</th>
                    <th scope="col">Price</th>
                    <th scope="col">Purchase Date</th>
                    <th scope="col">Purchase Time</th>
                    <th scope="col">Upload Date</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <th scope="row">#</th>
                    <td>@Model.PlaceOfPurchase</td>
                    <td>R$@Model.Price</td>
                    <td>@Model.PurchaseDate</td>
                    <td>@Model.PurchaseTime</td>
                    <td>@Model.UploadDate</td>
                </tr>

            </tbody>
        </table>

        <button type="submit" class="btn btn-danger">Delete</button>  <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
    </form>
</div>

